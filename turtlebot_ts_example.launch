<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/empty.world"/>
      <arg name="paused" value="false"/>
      <arg name="use_sim_time" value="true"/>
      <arg name="gui" value="true"/>
      <arg name="headless" value="false"/>
      <arg name="debug" value="false"/>
    </include>

    <group ns = "turtlebot_1">
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
    </group>    
    
    <node pkg="turtlebot_ctrl" name="turtlebot_ctrl" type="turtlebot_ctrl.py" output="screen">
    </node>

    <node pkg="rviz" name="rviz" type="rviz" output="screen" args="-d /home/ubuntu484/catkin_ws/src/turtlebot_ctrl/rviz/turtlebot_ctrl.rviz">
    </node>

    <node pkg="tf" type="static_transform_publisher" name="turtlebot_1_map_odom_broadcaster" args="0 0 0 0 0 0 /map /turtlebot_1/odom 5" />
 

</launch>
